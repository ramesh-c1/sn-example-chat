#!/usr/bin/env node
var SimpleServer = require('../lib/simple');
var server = SimpleServer.createServer({
  port: process.argv[2]
});

server.start(function (err) {
  if (err) {
    console.error('Failed to start with:', err.message || err);
    process.exit(1);
  }

  console.log('Listening on port ' + server.port + '...');
});
